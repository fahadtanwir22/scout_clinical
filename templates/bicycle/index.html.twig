{% extends 'base.html.twig' %}

{% block title %}Bicycle index{% endblock %}

{% block body %}

   <div class="row">
      <div class="col-md-12 col-lg-12">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Bicycles</h5>
                <a class="btn btn-primary" href="{{ path('app_bicycle_new') }}">Create New Bicycle</a>
            </div>
        </div>
      </div>
   </div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Maker</th>
                <th>Specifications</th>
                <th>Price</th>
                <th>NumberOfGears</th>
                <th>WheelDiameter</th>
                <th>PedalRpm</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bicycle in bicycles %}
            <tr>
                <td>{{ bicycle.id }}</td>
                <td>{{ bicycle.Maker }}</td>
                <td>{{ bicycle.Specifications }}</td>
                <td>{{ bicycle.Price }}</td>
                <td>{{ bicycle.NumberOfGears }}</td>
                <td>{{ bicycle.WheelDiameter }}</td>
                <td>{{ bicycle.PedalRpm }}</td>
                <td>
                    <a href="{{ path('app_bicycle_show', {'id': bicycle.id}) }}">show</a>
                    <a href="{{ path('app_bicycle_edit', {'id': bicycle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
