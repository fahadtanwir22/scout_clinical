{% extends 'base.html.twig' %}

{% block title %}Bicycle{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Bicycle</h5>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12 col-lg-12">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ bicycle.id }}</td>
                </tr>
                <tr>
                    <th>Maker</th>
                    <td>{{ bicycle.Maker }}</td>
                </tr>
                <tr>
                    <th>Specifications</th>
                    <td>{{ bicycle.Specifications }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ bicycle.Price }}</td>
                </tr>
                <tr>
                    <th>NumberOfGears</th>
                    <td>{{ bicycle.NumberOfGears }}</td>
                </tr>
                <tr>
                    <th>WheelDiameter</th>
                    <td>{{ bicycle.WheelDiameter }}</td>
                </tr>
                <tr>
                    <th>PedalRpm</th>
                    <td>{{ bicycle.PedalRpm }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<div class="row">
    <div class="col-md-6 col-lg-6">
        <a class="btn btn-primary" href="{{ path('app_bicycle_index') }}">back to list</a>
        <a class="btn btn-primary" href="{{ path('app_bicycle_edit', {'id': bicycle.id}) }}">edit</a>
    </div>
    <div class="col-md-6 col-lg-6">
        {{ include('bicycle/_delete_form.html.twig') }}
    </div>
</div>



{% endblock %}
